@model IEnumerable<MovieWebsite.Models.Country>

@{
    ViewData["Title"] = "Quản Lý Quốc Gia";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-dashboard">
    <h4>@ViewData["Title"]</h4>
    
    <p>
        <a asp-action="Create" class="btn-add" style="text-decoration: none;">Thêm Quốc Gia Mới</a>
    </p>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <table class="management-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Code)</th>
                <th>@Html.DisplayNameFor(model => model.FlagPath)</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Code)</td>
                    <td>@Html.DisplayFor(modelItem => item.FlagPath)</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Countries" asp-action="Edit" asp-route-id="@item.Id" class="btn-action update">Sửa</a>
                        <a asp-area="Admin" asp-controller="Countries" asp-action="Delete" asp-route-id="@item.Id" class="btn-action delete">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>