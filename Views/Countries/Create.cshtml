@model MovieWebsite.Models.Country

@{
    ViewData["Title"] = "Thêm Quốc Gia";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-dashboard">
    <h4>@ViewData["Title"]</h4>

    <div class="row">
        <div class="col-md-6">
            <form asp-area="Admin" asp-controller="Countries"  asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Tên Quốc Gia</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Code" class="control-label">Mã Quốc Gia (vd: VN, US)</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FlagPath" class="control-label">Đường dẫn ảnh cờ (tùy chọn)</label>
                    <input asp-for="FlagPath" class="form-control" />
                    <span asp-validation-for="FlagPath" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn-add">Tạo Mới</button>
                    <a  asp-area="Admin" asp-controller="Countries"  asp-action="Index" class="btn-action">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}