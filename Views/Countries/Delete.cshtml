@model MovieWebsite.Models.Country

@{
    ViewData["Title"] = "Xác Nhận Xóa Quốc Gia";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="admin-dashboard">
    <h4>@ViewData["Title"]</h4>
    
    <div class="alert alert-danger">
        <h3>Bạn có chắc chắn muốn xóa quốc gia này không?</h3>
        <p>Lưu ý: Nếu có phim nào đang thuộc quốc gia này, việc xóa có thể gây lỗi.</p>
    </div>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Code)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Code)</dd>
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn-action delete">Xóa</button> |
            <a  asp-area="Admin" asp-controller="Countries"  asp-action="Index">Quay lại danh sách</a>
        </form>
    </div>
</div>