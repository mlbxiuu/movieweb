@model Movie

@{
    ViewData["Title"] = "Xóa phim";
}

<div class="container my-5">
    <h1 class="display-5 fw-bold text-light">@ViewData["Title"]</h1>
    <h3 class="text-light">Bạn có chắc chắn muốn xóa phim "@Model.Title"?</h3>
    <hr class="bg-light" />
    <div class="card bg-dark text-light border-0 shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-light">Tên phim</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3 text-light">Tiêu đề tiếng Anh</dt>
                <dd class="col-sm-9">@Model.EnglishTitle</dd>

                <dt class="col-sm-3 text-light">Năm phát hành</dt>
                <dd class="col-sm-9">@Model.ReleaseYear</dd>

                <dt class="col-sm-3 text-light">Thể loại</dt>
                <dd class="col-sm-9">@Model.Genre</dd>

                <dt class="col-sm-3 text-light">Đạo diễn</dt>
                <dd class="col-sm-9">@Model.Director</dd>

                <dt class="col-sm-3 text-light">Diễn viên</dt>
                <dd class="col-sm-9">@Model.Cast</dd>

                <dt class="col-sm-3 text-light">Số tập</dt>
                <dd class="col-sm-9">@Model.Episodes / @Model.TotalEpisodes</dd>
            </dl>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
}